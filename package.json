{
  "name": "memex-graph",
  "version": "0.2.0",
  "description": "Personal knowledge graph with decentralized identity",
  "type": "module",
  "main": "src/index.tsx",
  "scripts": {
    "start": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --compile --outfile=memex",
    "build:linux-x64": "bun build src/index.tsx --compile --target=bun-linux-x64 --outfile=memex-linux-x64",
    "build:linux-arm64": "bun build src/index.tsx --compile --target=bun-linux-arm64 --outfile=memex-linux-arm64",
    "build:darwin-x64": "bun build src/index.tsx --compile --target=bun-darwin-x64 --outfile=memex-darwin-x64",
    "build:darwin-arm64": "bun build src/index.tsx --compile --target=bun-darwin-arm64 --outfile=memex-darwin-arm64"
  },
  "dependencies": {
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.7.1",
    "bs58": "^6.0.0",
    "ink": "^5.1.0",
    "ink-text-input": "^6.0.0",
    "openai": "^5.1.0",
    "react": "^18.3.1",
    "react-devtools-core": "^7.0.1"
  },
  "devDependencies": {
    "bun-types": "^1.2.4",
    "@types/react": "^18.3.18",
    "typescript": "^5.7.3"
  }
}
